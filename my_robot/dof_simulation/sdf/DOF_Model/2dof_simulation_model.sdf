                <axis>
                    <xyz>0 0 1</xyz>
                    <limit>
                        <lower>-1e16</lower>
                        <upper>1e16</upper>
                        <effort>5e6</effort>  <!-- âœ… Effort ì„¤ì • ì¶”ê°€ -->
                    </limit>
