                </inertial>
                <visual name='visual'>
                    <pose>0 0 0 0 0 0</pose>
                    <geometry>
                        <mesh>
                            <uri>file:///home/kimsh/ros2_ws/src/pan_tilt/sdf/meshes/base.dae</uri>
                            <scale>0.01 0.01 0.01</scale>
