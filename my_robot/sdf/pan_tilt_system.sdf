                    <geometry>
                        <mesh>
                            <uri>file:///home/kimsh/ros2_ws/src/pan_tilt/sdf/meshes/ym080.dae</uri>
                            <scale>0.01 0.01 0.01</scale>
                        </mesh>
                    </geometry>
                </collision>
            </link>
            
            <link name='pan_support'>
                <pose relative_to='pan_motor'>0.31 0.035 0 -1.5708 -1.5708 0</pose>
                <inertial>
                    <mass>5</mass>
                    <inertia>
                        <ixx>0.145833</ixx>
                        <ixy>0</ixy>
