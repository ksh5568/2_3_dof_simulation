                    </inertia>
                </inertial>
                <visual name='visual'>
                    <pose>0 0 0 0 0 0</pose>
                    <geometry>
                        <mesh>
                            <uri>file:///home/kimsh/ros2_ws/src/pan_tilt/sdf/meshes/pan_support.dae</uri>
                            <scale>0.01 0.01 0.01</scale>
                        </mesh>
                    </geometry>
                </visual>
                <collision name="collision">
                    <geometry>
                        <mesh>
                            <uri>file:///home/kimsh/ros2_ws/src/pan_tilt/sdf/meshes/pan_support.dae</uri>
                            <scale>0.01 0.01 0.01</scale>
                        </mesh>
                    </geometry>
                </collision>
            </link>
            
            <link name='tilt_motor'>
                <pose relative_to='pan_support'>0 0.02 0.232 3.14159 0 0</pose>
                <inertial>
                    <mass>5</mass>
                    <inertia>
                        <ixx>0.145833</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.145833</iyy>
                        <iyz>0</iyz>
                        <izz>0.125</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <pose>0 0 0 0 0 0</pose>
                    <geometry>
                        <mesh>
                            <uri>file:///home/kimsh/ros2_ws/src/pan_tilt/sdf/meshes/ym080.dae</uri>
                            <scale>0.01 0.01 0.01</scale>
